menuHoverColor = #d7d7d7
menuSelectedColor = #ccc
linkColor = #2A4EFF

transition()
  -moz-transition: arguments
  -webkit-transition: arguments
  -ms-transition: arguments
  transition: arguments

html
  background: url('/img/bg.png')

html, body
  padding: 0
  margin: 0

body
  font-family: "Segoe UI", "Droid Sans", sans-serif
  font-size: 14px

.clear
  clear: both

.content
  padding: 50px 10%

.menu
  height: 40px
  background: #ccc
  background: rgba(200, 200, 200, 0.3)

.menu-item
  display: inline-block
  vertical-align: top
  height: 40px
  line-height: 40px
  cursor: pointer
  padding: 0 10px
  
  &:hover
    background: menuHoverColor
  
  &.menu-item-selected
    background: menuSelectedColor

.content-data
  background: #eee

.about-block
  padding: 10px 10px 0 10px

.about-title
  margin-top: 0

.link
  color: linkColor
  text-decoration: underline

.link:hover
  text-decoration: none

.lecture
  display: block
  padding: 10px
  cursor: pointer
  color: #000
  text-decoration: none

.lecture:hover
  background: menuHoverColor

.lecture-avatar
  width: 60px
  height: 60px
  float: left
  border: none

.lecture-content
  margin-left: 70px
  min-height: 60px

.lecture-title
  font-size: 120%
  line-height: 34px

.lecture-view
  padding: 10px

.lecture-view-title
  margin-top: 0
  margin-bottom: 5px

.lecture-view-author
  margin-bottom: 10px

.lecture-view-avatar
  border: none
  margin-bottom: 25px

.lecture-view-link
  display: block
  margin: 10px 0

.lecture-iframe-outer
  width: 100%
  position: relative
  margin: 10px 0

.lecture-iframe-outer:after
  padding-top: 56.25%
  display: block
  content: ''

.lecture-iframe
  position: absolute
  top: 0
  left: 0
  border: none
  width: 100%
  height: 100%

.student
  padding: 10px
  display: inline-block

.student:hover
  background: menuHoverColor

.student-avatar
  width: 60px
  border: none

.student-view
  padding: 10px

.student-view-name
  font-size: 120%
  margin: 5px 0

.student-view-city
  margin-bottom: 15px

.student-view-avatar
  float: right
  margin: 10px
  border: none

.student-view-links
.student-view-link
  margin: 5px 0

.student-view-about-title
  margin: 15px 0 5px 0
